---
import type { Post } from "@/consts";
interface Props {
  post: any;
}

const { post } = Astro.props;

var margin = "";
if (post.id === "img2") {
  margin = "!mt-0";
}
import FormattedDate from "@/components/FormattedDate.astro";
const description = post.data.description;
const words = description.split(' ');
let formattedDescription = '';

if (words.length > 2) {
  formattedDescription = `${words[0]} ${words[1]}<br />${words.slice(2).join(' ')}`;
} else {
  formattedDescription = description; // Si tiene 2 palabras o menos, no modificamos
}
---

<a
  href={`/blog/${post.id}/`}
  class="flex flex-grow h-[100vh] w-full text-white object-cover relative py-10"
>
  <img src={post.data.heroImage} alt="" class="w-full h-full object-cover" />

  <div
    class="absolute bottom-16 left-6 font-bold pr-16 flex flex-col gap-3  w-full"
  >
    <p class="text-4xl font-medium ">{post.data.title}</p>
    <p class="text-7xl max-w-96 " set:html={formattedDescription}></p>
   <div class="flex items-center"> <FormattedDate date={new Date(post.data.pubDate)} />  <span class="w-5 text-5xl -mb-7 ml-2">&dot;</span> <p>4 min read</p> </div>
  </div>
</a>
