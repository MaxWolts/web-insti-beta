---
const today = new Date().toLocaleDateString("en-us", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
import Button from "./Button.astro";
import { getCollection } from "astro:content";

const blogEntries = await getCollection("blog");
const collectionEntries = await getCollection("collection");

// Dividimos el blog en dos columnas para ocupar 2 listas
const midPoint = Math.ceil(blogEntries.length / 2);
const blogCol1 = blogEntries.slice(0, midPoint);
const blogCol2 = blogEntries.slice(midPoint);
// Helper para derivar slug desde id (remueve directorio y extensiÃ³n)
const toSlugFromId = (id: string) =>
  id.replace(/^.*\//, "").replace(/\.(md|mdx)$/i, "");
---

<footer
  class="relative bg-muted pt-10 w-full md:pb-6 border-t flex flex-col md:flex-row gap-20 z-10 max-w-full overflow-hidden"
>
  <div class="container px-5 md:px-0 mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="md:w-1/2 flex flex-col items-start gap-6 col-span-1">
      <p class="text-3xl font-semibold font-fugaz ">
        Would you like to contact the artist?
      </p>
      <Button text="Let's Chat" href="/contact" />
    </div>
    <div class="md:w-1/2 flex flex-col justify-between md:pr-20 col-span-1">
      <p>
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Culpa
        laboriosam non vel aliquam in rem nesciunt ea maiores totam? Tempore
        exercitationem commodi,
      </p>
      <div class="flex justify-between items-center mt-20 mb-6">
        <a href="https://jramma.com" target="_blank" class="">jramma &reg;</a>
        <p>{today}</p>
      </div>
    </div>
    <hr class="col-span-1 md:col-span-2" />
    <div
      class="col-span-1 md:col-span-2 justify-between grid md:grid-cols-4 px-6 items-start gap-6 md:gap-0"
    >
      <div>
        <h2>Menu</h2>
        <ul class="font-bold">
          <li><a href="/" class="">Inicio</a></li>
          <li><a href="/about" class="">About me</a></li>
          <li><a href="/blog" class="">Blog</a></li>
          <li><a href="/collection" class="">Collection</a></li>
          <li><a href="/contact" class="">Contact</a></li>
        </ul>
      </div>
      <div>
        <h2>Blog</h2>
        <ul>
          {
            blogCol1.map((entry) => (
              <li class="font-bold">
                <a href={`/blog/${entry.id}`} class="">
                  {entry.data?.title ?? entry.id}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h2>Blog</h2>
        <ul>
          {
            blogCol2.map((entry) => (
              <li class="font-bold">
                <a href={`/blog/${entry.id}`} class="">
                  {entry.data?.title ?? entry.id}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div>
        <h2>Collection</h2>
        <ul>
          {
            collectionEntries.map((entry) => (
              <li class="font-bold">
                <a href={`/collection/${entry.id}`} class="">
                  {entry.data?.title ?? entry.id}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <hr class="col-span-1 md:col-span-2" />
    <p class="col-span-1 md:col-span-2 text-center">
      From the river to the sea, Palestine will be free
    </p>
    <div class="col-span-1 md:col-span-2 text-center mx-auto pb-20">
      <svg class="w-10 h-10" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1"><path d="M3.901 13.407v-2.464c-1.304-.452-2.18-1.97-2.18-3.754c0-1.063.24-2.174 1.42-2.174h2.993a1.111 1.111 0 0 1 .322 2.174l-1.71.519c.874 0 1.948.83 1.925 1.905m3.144 3.795v-2.465s.587-.293 1.2-.88c1.181-1.131 1.335-2.919 1.016-4.523c-.107-.534-.26-1.076-.477-1.532m-8.886.934V3.056a1.478 1.478 0 0 1 2.957 0v1.886"/><path d="M5.625 4.554V2.072a1.48 1.48 0 1 1 2.959 0v2.482a1.48 1.48 0 0 1-1.365 1.474"/><path d="M8.584 3.057a1.479 1.479 0 1 1 2.957 0v1.27a1.479 1.479 0 1 1-2.957 0z"/></g></svg>
    </div>
  </div>
</footer>
