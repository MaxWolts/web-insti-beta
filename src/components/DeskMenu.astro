---
import { Icon } from "astro-icon/components";
import { URLS } from "@/consts";
import Link from "@/components/ui/Link.astro";
---

<section
  class="hidden md:flex flex-col w-2/12 py-10 justify-between h-full min-h-screen"
>
  <div class="w-full flex justify-end z-10">
    <Icon name="search" class="text-4xl" />
  </div>
  <nav class="flex flex-col text-right gap-10 pr-10">
    <h1 class="text-4xl font-bold">
      Watercolor art <br /> pieces
    </h1>
    <ul class="text-xl flex flex-col gap-5 z-10">
      {Object.entries(URLS).map(([key, value]) => (
        <li>
          <Link
            href={value.href}
            target="_self"
            rel="noopener noreferrer"
            text={value.text}
            className="underline-effect"
          />
        </li>
      ))}
    </ul>
  </nav>
  <div class="flex flex-col justify-end items-end text-3xl gap-5 relative z-10">
    <a class="text-base rotate-90 absolute -top-30 -right-4">jramma &reg;</a>
    <Icon name="insta" />
    <Icon name="pinterest" />
  </div>
</section>
